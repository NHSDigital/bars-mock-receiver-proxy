<TargetEndpoint name="sandbox">
    <Description/>
    <FaultRules/>
    <Flows/>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request/>
        <Response>
          <Step>
            <Name>AssignMessage.AddCors</Name>
          </Step>
        </Response>
    </PreFlow>
    <HTTPTargetConnection>
      <SSLInfo>
        <Enabled>true</Enabled>
      </SSLInfo>
      <LoadBalancer>
        <Server name="hosted-apis"/>
      </LoadBalancer>
      <Path>/bref</Path>
    </HTTPTargetConnection>
</TargetEndpoint>
