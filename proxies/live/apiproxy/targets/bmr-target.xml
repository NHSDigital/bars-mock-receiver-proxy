<TargetEndpoint name="bars-mock-receiver-target">
  <FaultRules/>
  <PreFlow>
    <Request>
      <Step>
        <Name>Quota</Name>
      </Step>
      <Step>
        <Name>SpikeArrest</Name>
      </Step>
      <Step>
        <Name>Python.DecodeBase64</Name>
      </Step>
    </Request>
  </PreFlow>
    <HTTPTargetConnection>
      <SSLInfo>
        <Enabled>true</Enabled>
      </SSLInfo>
      <LoadBalancer>
        <Server name="hosted-apis"/>
      </LoadBalancer>
      <Path>/bref</Path>
    </HTTPTargetConnection>
</TargetEndpoint>
